             x:Class="MauiBuberBreakfast.MainPage">

    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="AUTO"/>
        </Grid.RowDefinitions>
    </Grid>

    <!--Your Breakfasts-->
    <HorizontalStackLayout>
        <Label FontFamily="RobotoBold" FontSize="24" Text="Your"/>
        <Label FontFamily="RobotoBold" FontSize="24" Text="Breakfasts" TextColor="{StaticResource BuberBlue}"/>
    </HorizontalStackLayout>

    <!--Breakfasts you have created-->
    <Label Grid.Row="1" FontFamily="RobotoBold" FontSize="24" Text="Breakfasts you have created" TextColor="#555"/>

